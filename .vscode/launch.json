  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Zoroaster",
      "program": "${workspaceFolder}/node_modules/.bin/zoroaster",
      "env": {
        "BABEL_ENV": "debug",
        "ZOROASTER_TIMEOUT": "9999999",
        "NODE_DEBUG": "alamode",
      },
      "console": "integratedTerminal",
      "args": [
        "test/spec",
        "-b",
        "-w",
      ],
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch alamode",
      "program": "${workspaceFolder}/src/bin/register.js",
      "env": {
        "BABEL_ENV": "debug",
        "NODE_DEBUG": "alamode",
      },
      "args": [
        "test/fixture/src", // source
        "-o", "build2", // output
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
  ]
}
