{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch t",
      "program": "${workspaceFolder}/t.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Alamode Build ",
      "program": "${workspaceFolder}/src/bin/alamode.js",
      "args": [
        "test/fixture/src",
        "-o", "build2"
      ],
      "skipFiles": [
        "<node_internals>/**/*.js"
      ],
      "console": "integratedTerminal",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Source",
      "program": "${workspaceFolder}/test/fixture/src/run.js",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ],
      "console": "integratedTerminal",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/build2/run.js",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ],
      "console": "integratedTerminal",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Zoroaster",
      "program": "${workspaceFolder}/node_modules/.bin/zoroaster",
      "env": {
        "ZOROASTER_TIMEOUT": "9999999",
        "NODE_DEBUG": "alamode",
      },
      "console": "integratedTerminal",
      "args": [
        "test/spec/integration.js",
        "-a",
        "-w",
      ],
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch alamode",
      "program": "${workspaceFolder}/src/bin/alamode.js",
      "env": {
        "ALAMODE_ENV": "test-build",
        "NODE_DEBUG": "alamode",
      },
      "args": [
        "test/fixture/src", // source
        "-o", "build2", // output
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
  ]
}
